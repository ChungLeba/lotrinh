<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PARTNER | ROUTER</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../admin/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../admin/dist/css/adminlte.min.css">
  
    <!-- Dữ liệu tỉnh thành -->
    <script src="../../javascripts/dvhcvn.js"></script>
        

</head>
<body class="sidebar-mini sidebar-collapse">
<!-- Site wrapper -->
<div class="wrapper">

<%- include('../2.leftmenu.partner.ejs'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Tạo thời gian đi</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Tạo thời gian đi</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col">
                <div class="card card-success">
                    <div class="card-body">
                        <h3><%- data.ten %></h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="card card-success card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Bảng thời gian chiều đi</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span title="Chuyến" class="badge bg-danger" id="dem_chuyen_chieudi">0</span>
                                </div>
                            </div>
                            <div class="card-body table-responsive p-0" style="height: 440px;">
                                <table class="table table-head-fixed text-nowrap" id="table_chieudi">
                                    <thead>
                                      <tr>
                                        <th>Chuyến số</th>
                                        <th>Mã chuyến</th>
                                        <th>Thời gian khởi hành</th>
                                      </tr>
                                    </thead>
                                    <tbody id="tbody_chieudi">
                                        <% for( let index = 0; index < data.chieudi[0].time.length; index++ ) { %>
                                            <tr>
                                                <td><%- index +1 %></td>
                                                <td><%-data.chieudi[0].time[index].tripCode%></td>
                                                <td><%-data.chieudi[0].time[index].time%>, <%- moment(data.chieudi[0].time[index].date).format("DD/MM/YYYY")%></td>
                                            </tr>
                                        <% } %> 
                                        
                                    </tbody>
                                  </table>
                            </div>
                            <div class="card-footer">
                                <a href="/partner/timetables/departure/<%- data._id %>">
                                    <button type="button" class="btn btn-block bg-gradient-success" id="bt_time_chieudi">Thêm lịch trình chiều đi</button>

                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="card card-success card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Chiều đi</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span title="địa điểm" class="badge bg-danger" id="dem_chieudi">0</span>
                                </div>
                            </div>

                            <div class="card-body table-responsive p-0" style="height: 500px;">
                                <table class="table table-head-fixed text-nowrap" id="table_chieudi">
                                  <thead>
                                    <tr>
                                      <th>#</th>
                                      <th>Địa điểm</th>
                                    </tr>
                                  </thead>
                                  <tbody id="tbody_chieudi">
                                    <% for( let index = 0; index < data.chieudi.length; index++ ) { %>
                                    <tr id="tr_chieudi_<%- index +1 %>">
                                        <td><%- index +1 %></td>
                                        <td>
                                            <p style="font-weight: bold;margin-bottom:2px"><%- data.chieudi[index].locationID.ten %></p>
                                            <p style="margin-bottom:2px"><%- data.chieudi[index].locationID.duong %>, <%- data.chieudi[index].locationID.phuong %>, <%- data.chieudi[index].locationID.quan %>, <%- data.chieudi[index].locationID.tinh %></p>
                                        </td>
                                        
                                    </tr>
                                    <% } %>
                                  </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    
                    <div class="col-sm-5">
                        <div class="card card-danger card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Bảng thời gian chiều về</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span title="Chuyến" class="badge bg-danger" id="dem_chuyen_chieuve">0</span>
                                </div>
                            </div>
                            <div class="card-body table-responsive p-0" style="height: 440px;">
                                <table class="table table-head-fixed text-nowrap" id="table_chieudi">
                                    <thead>
                                      <tr>
                                        <th>Chuyến số</th>
                                        <th>Mã chuyến</th>
                                        <th>Thời gian khởi hành</th>
                                      </tr>
                                    </thead>
                                    <tbody id="tbody_chieuve">
                                        <tr>
                                            <td>1</td>
                                            <td>HCM-DN-01</td>
                                            <td>08:00, 22/22/2022</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>HCM-DN-01</td>
                                            <td>08:00, 22/22/2022</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>HCM-DN-01</td>
                                            <td>08:00, 22/22/2022</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>HCM-DN-01</td>
                                            <td>08:00, 22/22/2022</td>
                                        </tr>
                                        
                                    </tbody>
                                  </table>
                            </div>
                            <div class="card-footer">
                                <button type="button" class="btn btn-block bg-gradient-danger" id="bt_time_chieudi">Thêm lịch trình chiều về</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="card card-danger card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Chiều về</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span title="Địa điểm" class="badge bg-danger" id="dem_chieuve">0</span>
                                </div>
                            </div>

                            <div class="card-body table-responsive p-0" style="height: 500px;">
                                <table class="table table-head-fixed text-nowrap" id="table_chieuve">
                                  <thead>
                                    <tr>
                                      <th>#</th>
                                      <th>Địa điểm</th>
                                    </tr>
                                  </thead>
                                  <tbody id="tbody_chieuve">
                                    <% for( let index = 0; index < data.chieuve.length; index++ ) { %>
                                        <tr id="tr_chieuve_<%- index +1 %>">
                                            <td><%- index +1 %> </td>
                                            <td>
                                                <p style="font-weight: bold;margin-bottom:2px"><%- data.chieuve[index].locationID.ten %></p>
                                                <p style="margin-bottom:2px"><%- data.chieuve[index].locationID.duong %>, <%- data.chieuve[index].locationID.phuong %>, <%- data.chieuve[index].locationID.quan %>, <%- data.chieuve[index].locationID.tinh %></p>
                                            </td>
                                        </tr>
                                        <% } %>
                                  </tbody>
                                </table>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
    
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../3.footer.partner.ejs'); %>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
<!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

